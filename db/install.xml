<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/quiz/accessrule/faceid/db" VERSION="2025061813" COMMENT="FaceID table">
    <TABLES>
        <TABLE NAME="quizaccess_faceid" COMMENT="Stores FaceID on/off per quiz">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="quizid" TYPE="int" LENGTH="10" NOTNULL="true"/>
                <FIELD NAME="enabled" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0"/>
                <FIELD NAME="verification_type" TYPE="char" LENGTH="20" NOTNULL="false" DEFAULT="basic" COMMENT="Type: basic or with_profile"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="quizidfk" TYPE="foreign" FIELDS="quizid" REFTABLE="quiz" REFFIELDS="id"/>
            </KEYS>
        </TABLE>
        <TABLE NAME="quizaccess_faceid_profile" COMMENT="Stores profile verification data including ID document">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="User ID"/>
                <FIELD NAME="iddocument_filename" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="ID document filename"/>
                <FIELD NAME="iddocument_filepath" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="ID document file path"/>
                <FIELD NAME="iddocument_filesize" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="ID document file size"/>
                <FIELD NAME="verified" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="1 if profile is verified, 0 if not"/>
                <FIELD NAME="verification_score" TYPE="number" LENGTH="5" NOTNULL="false" DECIMALS="4" SEQUENCE="false" COMMENT="Face comparison score"/>
                <FIELD NAME="last_verification" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Timestamp of last verification"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="userid" TYPE="foreign-unique" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="verified" UNIQUE="false" FIELDS="verified"/>
            </INDEXES>
        </TABLE>
    </TABLES>
</XMLDB>
